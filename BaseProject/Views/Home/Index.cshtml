@{
    Layout = "_Layout.cshtml";
    ViewBag.Title = "Home Page";
}

    <form class="form-signin" action="~/Home/Login" method="post" style="background-color: #0f5499;
        border-radius: 10px">
        <h1 class="h5 mb-3 font-weight-normal text-white">
            点検表（設備・計測機器）
        </h1>
        <input type="text" id="login_id" name="login_id" class="form-control" placeholder="ユーザID" required>
        <input type="password" id="login_pass" name="login_pass" class="form-control" placeholder="パスワード" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit">サインイン</button>
    </form>

@section style {
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: auto;
        }

            .form-signin .checkbox {
                font-weight: 400;
            }

            .form-signin .form-control {
                position: relative;
                box-sizing: border-box;
                height: auto;
                padding: 10px;
                font-size: 16px;
            }

                .form-signin .form-control:focus {
                    z-index: 2;
                }

            .form-signin input[type="email"] {
                margin-bottom: -1px;
                border-bottom-right-radius: 0;
                border-bottom-left-radius: 0;
            }

            .form-signin input[type="password"] {
                margin-bottom: 10px;
                border-top-left-radius: 0;
                border-top-right-radius: 0;
            }
    </style>
}

