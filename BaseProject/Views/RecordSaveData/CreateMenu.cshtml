@{ ViewBag.Title = "Main Menu"; }

<div class="container body-content">
    <main id="vueMenu">
        <div class="row mt-2">
            <div class="col-12">
                <h4>
                    ◆基本情報-点検項目登録
                </h4>
            </div>
            <div class="col-12">
                <div class="p-2" style="border:2px solid gray;border-radius:5px;width:360px">
                    <button v-on:click="OpenModalCreateData"
                            type="button" class="btn btn-primary w-100">
                        新規作成
                    </button>
                    <button v-on:click="OpenModalUpdateData"
                             type="button" class="btn btn-primary w-100 mt-3">改定</button>
                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="ModalCreateData" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <form id="FormModalKaitei">
                <div class="modal-dialog modal-xl" role="document">
                    <div class="modal-content">
                        <div class="modal-header bg-primary text-white">
                            <h5 class="modal-title" id="exampleModalLabel">新規作成</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="container-fluid">

                                <div class="row mt-2">
                                    <div class="col-lg-4 text-right">
                                        <label class="col-form-label">ライン：</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <select class="form-control ">
                                            <option value="1">ライン1</option>
                                            <option value="2">ライン2</option>
                                            <option value="3">ライン3</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-lg-4 text-right">
                                        <label class="col-form-label">工程名：</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <select class="form-control ">
                                            <option value="1">工程名1</option>
                                            <option value="2">工程名2</option>
                                            <option value="3">工程名3</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-lg-4 text-right">
                                        <label class="col-form-label">ステーション名：</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <select class="form-control ">
                                            <option value="1">ステーション名1</option>
                                            <option value="2">ステーション名2</option>
                                            <option value="3">ステーション名3</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-lg-4 text-right">
                                        <label class="col-form-label">選択：</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="jumbotron p-2 mb-2">
                                            <div class="container-fluid ">
                                                <div class="col-12 form-inline">
                                                    <input id="chk1_1"
                                                           type="radio" name="chk1" checked />
                                                    <label for="chk1_1"
                                                           class="col-form-label col-form-label-sm ml-2">日常点検：設備</label>
                                                </div>
                                                <div class="col-12 form-inline">
                                                    <input id="chk1_2"
                                                           type="radio" name="chk1" />
                                                    <label for="chk1_2"
                                                           class="col-form-label col-form-label-sm ml-2">日常点検：計測機器</label>
                                                </div>
                                                <div class="col-12 form-inline">
                                                    <input id="chk1_3"
                                                           type="radio" name="chk1" />
                                                    <label for="chk1_3"
                                                           class="col-form-label col-form-label-sm ml-2">チェックシート</label>
                                                </div>
                                                <div class="col-12 form-inline">
                                                    <input id="chk1_4"
                                                           type="radio" name="chk1" />
                                                    <label for="chk1_4"
                                                           class="col-form-label col-form-label-sm ml-2">交換履歴</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-lg-4 text-right">
                                        <label class="col-form-label">日付：</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <input type="date" class="form-control form-control-sm" />
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-lg-4 text-right">
                                        <label class="col-form-label">勤務区分：</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="jumbotron p-2 mb-2">
                                            <div class="container-fluid ">
                                                <div class="col-12 form-inline">
                                                    <input id="chk2_1"
                                                           type="radio" name="chk2" checked />
                                                    <label for="chk2_1"
                                                           class="col-form-label col-form-label-sm ml-2">1直</label>
                                                </div>
                                                <div class="col-12 form-inline">
                                                    <input id="chk2_2"
                                                           type="radio" name="chk2" />
                                                    <label for="chk2_2"
                                                           class="col-form-label col-form-label-sm ml-2">2直</label>
                                                </div>
                                                <div class="col-12 form-inline">
                                                    <input id="chk2_3"
                                                           type="radio" name="chk2" />
                                                    <label for="chk2_3"
                                                           class="col-form-label col-form-label-sm ml-2">3直</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-lg-12 text-right">
                                        <a href="@Url.Action("Report","RecordSaveData")"
                                           class="btn btn-success btn-modal-menu">入力開始</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-6 text-left">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal" style="min-width:120px">閉じる</button>
                                    </div>
                                    <div class="col-6 text-right">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!--End-->
        <!-- Modal -->
        <div class="modal fade" id="ModalUpdateData" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <form id="FormModalKaitei">
                <div class="modal-dialog modal-xl" role="document">
                    <div class="modal-content">
                        <div class="modal-header bg-primary text-white">
                            <h5 class="modal-title" id="exampleModalLabel">新規作成</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="container-fluid">

                                <div class="row mt-2">
                                    <div class="col-lg-4 text-right">
                                        <label class="col-form-label">ライン：</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <select class="form-control ">
                                            <option value="1">ライン1</option>
                                            <option value="2">ライン2</option>
                                            <option value="3">ライン3</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-lg-4 text-right">
                                        <label class="col-form-label">工程名：</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <select class="form-control ">
                                            <option value="1">工程名1</option>
                                            <option value="2">工程名2</option>
                                            <option value="3">工程名3</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-lg-4 text-right">
                                        <label class="col-form-label">ステーション名：</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <select class="form-control ">
                                            <option value="1">ステーション名1</option>
                                            <option value="2">ステーション名2</option>
                                            <option value="3">ステーション名3</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-lg-4 text-right">
                                        <label class="col-form-label">区分：</label>
                                    </div>
                                    <div class="col-lg-8">
                                        <select class="form-control ">
                                            <option value="1">区分1</option>
                                            <option value="2">区分2</option>
                                            <option value="3">区分3</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12 text-right">
                                        <button type="button" class="btn btn-sm btn-primary" style="width:120px">検索</button>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <table class="table table-sm table-bordered" style="table-layout:fixed;font-size:12px" >
                                        <thead class="bg-primary text-white">
                                            <tr>
                                                <th style="width:70px"></th>
                                                <th>ライン名</th>
                                                <th>工程名</th>
                                                <th>ステーション名</th>
                                                <th>区分</th>
                                                <th>管理No</th>
                                                <th>名称</th>
                                                <th>制定年月日</th>
                                                <th>作成年月日</th>
                                                <th>作成者</th>
                                                <th>承認者</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <a href="@Url.Action("Report","BaseData")"
                                                       class="btn btn-primary btn-sm w-100">参照</a>
                                                </td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-6 text-left">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal" style="min-width:120px">閉じる</button>
                                    </div>
                                    <div class="col-6 text-right">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!--End-->
    </main>
</div>

@section scripts {
    <script>
        new Vue({
            el: '#vueMenu',
            data: {
            },
            methods: {
                OpenModalCreateData: function () {
                    $('#ModalCreateData').modal()
                },
                OpenModalUpdateData: function () {
                    $('#ModalUpdateData').modal()
                },
            },
        });
    </script>

}